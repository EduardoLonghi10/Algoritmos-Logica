algoritmo "Calcular_Idade"
// Função :  Calcular Idade
// Autor :  Evolua Sumaré
// Data : 26/03/2020
var
      ano_atual, ano_nasc, idade: inteiro
inicio
      Escreva("Em que ano nós estamos? ")
      leia(ano_Atual)
      Escreva("Em que ano eu nasci? ")
      leia(ano_nasc)
      idade <- ano_Atual - ano_nasc
      Escreva("Minha idade será: ", idade)
fimalgoritmo

